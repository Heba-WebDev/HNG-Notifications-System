# ============================================
# Shared Infrastructure Configuration
# ============================================
# These variables are used by all microservices (NestJS, Go, Python Django, etc.)
# Copy this file to .env and update with your actual values

# RabbitMQ Configuration
RABBITMQ_USERNAME=admin
RABBITMQ_PASSWORD=your-secure-password-here
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_EXCHANGE=notifications.direct

# PostgreSQL Database Configuration
DB_USERNAME=admin
DB_PASSWORD=your-secure-db-password-here
DB_HOST=localhost
DB_PORT=5432
# Comma-separated list of databases to create (optional)
POSTGRES_DATABASES=user_service,template_service,email_service,push_service,auth_service

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_HOST=localhost
REDIS_PORT=6379


